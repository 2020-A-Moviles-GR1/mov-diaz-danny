<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCicloVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciclo de Vida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/buttonListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCicloVida"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/buttonIntentRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Int. Respuesta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toEndOf="@+id/buttonCicloVida"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/buttonIntentImplicito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I. Implicito"
        app:layout_constraintEnd_toEndOf="@+id/buttonIntentRespuesta"
        app:layout_constraintStart_toStartOf="@+id/buttonIntentRespuesta"
        app:layout_constraintTop_toBottomOf="@+id/buttonIntentRespuesta" />

    <Button
        android:id="@+id/buttonRespuestaPropia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resp. Propia"
        app:layout_constraintEnd_toEndOf="@+id/buttonIntentImplicito"
        app:layout_constraintStart_toStartOf="@+id/buttonIntentImplicito"
        app:layout_constraintTop_toBottomOf="@+id/buttonIntentImplicito" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:background="@color/colorWhite"
    >


    <TextView
        android:id="@+id/textViewLayoutMGGestureName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textViewNormalText"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/app_name"
        />

    <TextView
        android:id="@+id/textViewLayoutMGFunctionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textViewNormalText"
        android:textStyle="italic"
        android:gravity="center"
        android:text="@string/app_name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/spinnerLayoutMGFunctionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            />

        <!---android:background="@drawable/spinner_background"-->

        <ImageButton
            android:id="@+id/imageButtonLayoutMGEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:src="@drawable/ic_baseline_edit_24"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            />

        <ImageButton
            android:id="@+id/imageButtonLayoutMGDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            />







    </LinearLayout>



</LinearLayout>